---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';

const metadata = {
  title: 'SaaS Landing Page',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Donate',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Donation Widget ******************* -->

  <Pricing
    title="Major Donations"
    prices={[
      {
        title: 'Small',
        subtitle: 'We know the power is in many of us coming together',
        price: '10',
        period: '/ one off, monthly or any!',
        callToAction: {
          target: '_blank',
          text: 'Thank you',
          href: '#',
        },
      },
      {
        title: 'Popular',
        subtitle: 'Thank you so much for your contribution',
        price: 100,
        period: '/ one off, monthly or any!',
        callToAction: {
          target: '_blank',
          text: 'Thank you',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Fab!',
      },
      {
        title: 'Larger shoulders',
        subtitle: 'Contributing back to the community',
        price: 1000,
        period: '/ one off, monthly or any!',
        callToAction: {
          target: '_blank',
          text: 'If 400 large shoulders pay Â£1000 each, we will reach our target!',
          href: '#',
        },
      },
    ]}
  />
</Layout>
